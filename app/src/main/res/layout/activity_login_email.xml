<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".src.login.exist.LoginEmailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_email_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:layout_gravity="center"
            tools:ignore="RtlSymmetry">

            <Button
                android:id="@+id/login_email_close_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:paddingEnd="10dp"
                android:text="로그인"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/login_email_title" />

            <Button
                android:id="@+id/login_email_help_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/icon_help" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/login_email_email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/login_email_toolbar"
        android:textSize="10sp"
        android:text="이메일 주소"
        android:visibility="visible" />

    <EditText
        android:id="@+id/login_email_email_et"
        android:layout_below="@+id/login_email_email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:hint="이메일 주소" />

    <TextView
        android:id="@+id/login_email_pw_txt"
        android:layout_below="@+id/login_email_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="비밀번호"
        android:visibility="visible" />

    <EditText
        android:id="@+id/login_email_pw_et"
        android:layout_below="@id/login_email_pw_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:hint="비밀번호" />

    <Button
        android:id="@+id/login_email_ok_btn"
        android:layout_below="@+id/login_email_pw_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@android:color/darker_gray"
        android:textStyle="bold"
        android:text="확인"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

</RelativeLayout>