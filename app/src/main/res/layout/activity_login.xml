<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/login_img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/login_txt_login"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="110dp"
        android:src="@drawable/logo_band_white" />

    <TextView
        android:id="@+id/login_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_txt_login"
        android:gravity="center"
        android:text="밴드는 그룹 멤버와 함께 하는 공간입니다."
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/login_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_text1"
        android:gravity="center"
        android:textSize="15sp"
        android:text="동호회, 스터디, 주제별 모임을 밴드로 시작하세요."
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login_btn_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_text2"
        android:background="#FFFFFF"
        android:text="휴대폰 번호 또는 이메일로 가입"
        android:gravity="center" />

    <Button
        android:id="@+id/login_btn_naver"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_btn_number"
        android:background="#1EC800"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/login_naver"
        android:text="네이버로 가입"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login_btn_facebook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_btn_naver"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/login_facebook"
        android:background="#2B5BA0"
        android:text="페이스북으로 가입"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login_btn_already"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_btn_facebook"
        android:background="#00FFFFFF"
        android:text="이미 가입하셨나요?  로그인하기"
        android:textColor="#FFFFFF"
        android:gravity="center" />

</RelativeLayout>