<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/already_btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/icon_close" />

    <Button
        android:id="@+id/already_btn_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_help" />

    <TextView
        android:id="@+id/already_txt_login"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="110dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="로그인" />

    <Button
        android:id="@+id/already_btn_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/already_txt_login"
        android:layout_centerHorizontal="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/logon_button"
        android:drawableStart="@drawable/icon_phone"
        android:textColor="#1EC800"
        android:text="휴대폰 번호로 로그인"
        android:gravity="center" />
    
    <LinearLayout
        android:id="@+id/line"
        android:layout_below="@id/already_btn_phone"
        android:layout_marginVertical="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:background="#F1F2F4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="또는" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:background="#F1F2F4"/>

    </LinearLayout>


    <Button
        android:id="@+id/already_btn_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line"
        android:background="#737586"
        android:textColor="#FFFFFF"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/icon_email"
        android:text="이메일로 로그인"
        android:gravity="center" />

    <Button
        android:id="@+id/already_btn_naver"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/already_btn_email"
        android:background="#1EC800"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/login_naver"
        android:text="네이버로 로그인"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/already_btn_facebook"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/already_btn_naver"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/login_facebook"
        android:background="#2B5BA0"
        android:text="페이스북으로 로그인"
        android:textColor="#FFFFFF" />

</RelativeLayout>