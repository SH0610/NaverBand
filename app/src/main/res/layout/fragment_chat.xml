<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/chat_root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".src.main.fragments.chat.ChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/chat_img_ad"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:clickable="true"
            android:src="@drawable/img_chatad"
            android:scaleType="fitXY"/>

        <ImageView
            android:scaleType="centerCrop"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/img_chatbar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_img_profile"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="13dp"
                    android:src="@drawable/img_sample1" />

                <LinearLayout
                    android:layout_gravity="center|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/chat_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="세번째 채팅방 (2)" />


                    <TextView
                        android:id="@+id/chat_txt_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="밴드 멤버들과 함께 하는 채팅방"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F2F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_img_profile2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/img_sample4" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/chat_txt_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="두번째 채팅방 (57)" />


                    <TextView
                        android:id="@+id/chat_txt_intro2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="밴드 멤버들과 함께 하는 채팅방"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F2F4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_img_profile3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/img_sample5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/chat_txt_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:text="첫번째 채팅방 (3)" />


                    <TextView
                        android:id="@+id/chat_txt_intro3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="밴드 멤버들과 함께 하는 채팅방"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F1F2F4"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>