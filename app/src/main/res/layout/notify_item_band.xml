<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F2F4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notify_img_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="15dp"
            android:src="@drawable/img_sample" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal" >
                
                <TextView
                    android:id="@+id/notify_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="안상희" />
                
                <TextView
                    android:layout_toEndOf="@+id/notify_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="댓글" />
                
            </RelativeLayout>

            <TextView
                android:id="@+id/notify_txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="댓글 내용"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/notify_txt_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="글 제목"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/notify_txt_band_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밴드 이름"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/notify_txt_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@id/notify_txt_band_name"
                    android:text="·"/>

                <TextView
                    android:id="@+id/notify_txt_date"
                    android:layout_toEndOf="@id/notify_txt_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9월 1일"
                    android:textSize="12sp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>