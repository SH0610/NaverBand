<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.band">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:windowSoftInputMode="adjustPan"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup"
        tools:targetApi="n">
        <activity android:name=".src.pageband.article.CommentItem"></activity>
        <activity android:name=".src.pageband.article.ArticleActivity" />
        <activity android:name=".src.login.emailphone.BirthdayActivity" />
        <activity android:name=".src.main.fragments.home.create.BandImageDialog" />
        <activity android:name=".src.main.fragments.home.create.BandCreateDialog" />
        <activity
            android:name=".src.pageband.BandSettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".src.pageband.BandMemberActivity" />
        <activity
            android:name=".src.pageband.BandFileActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".src.pageband.BandCalendarActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".src.pageband.BandAlbumActivity" />
        <activity
            android:name=".src.pageband.BandChatActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".src.login.exist.LoginNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".src.login.exist.LoginEmailActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".src.pageband.BandMainActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".src.login.emailphone.SignUpActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".src.login.EmailActivity" />
        <activity android:name=".src.main.my.ProfileActivity" />
        <activity android:name=".src.login.RegisterActivity" />
        <activity android:name=".src.login.AlreadyActivity" />
        <activity android:name=".src.main.my.MyActivity" />
        <activity android:name=".src.main.fragments.home.create.BandTypeDialog" />
        <activity android:name=".src.main.fragments.home.create.BandCreateActivity" />
        <activity android:name=".src.pageband.article.WriteArticleActivity" />
        <activity android:name=".src.main.fragments.feed.Choose" />
        <activity android:name=".src.main.MainActivity" /> <!-- 시작 액티비티를 SplashActivity로 설정, android:theme를 SplashTheme로 설정 -->
        <activity
            android:name=".src.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.login.LoginActivity" />
    </application>

</manifest>